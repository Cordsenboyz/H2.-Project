<UserControl x:Class="SkoleGUI.PersonContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SkoleGUI"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UniformGrid Rows="1">
        <Button Content="Create Person" FontSize="20" FontWeight="Bold" Margin="40, 40, 20, 40" Click="CreatePerson_Click" Background="Coral" />
        <Button Content="List Person" FontSize="20" FontWeight="Bold" Margin="20, 40, 40, 40" Click="ListPerson_Click" Background="BlanchedAlmond" />
    </UniformGrid>
</UserControl>